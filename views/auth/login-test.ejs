<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Login</title>
</head>
<body>
    <h1>Login to your account</h1>
    <div>
        <label for="accountantLogin">I am an employee</label>
        <input type="checkbox" name="accountantLogin" id="accountantLogin" onclick="changeFormAction()">
    </div>
    <br>
    <form action="/retailer/login" id="loginForm" method="post">
        <div>
            <label for="username">Username</label>
            <input type="text" name="username" id="username">
        </div>
        <div>
            <label for="password">Password</label>
            <input type="text" name="password" id="password">
        </div>
        <button type="submit">Submit</button>
    </form>
</body>
<script>
    const switchLoginType = document.querySelector("#accountantLogin")
    const loginForm =  document.querySelector("#loginForm")

    function changeFormAction(){
        if(switchLoginType.checked)
            loginForm.action = "/accountant/login"
        else
            loginForm.action = "/retailer/login"
    }
</script>
</html>